{
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "allowImportExportEverywhere": false
    },
    "env": {
        "node": true,
        "es6": true,
        "jest": true
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
            "warn"
        ],
        "no-unused-vars": [
            "error",
            {
                "args": "all",
                "argsIgnorePattern": "^_"
            }
        ],
        "complexity": [
            "error",
            5
        ]
    }
}